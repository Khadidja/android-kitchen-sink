<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akhadidja.kitchensink" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".splashscreen.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/SplashTheme" >
        </activity>
        <activity
            android:name=".splashscreen.SplashScreenResultActivity"
            android:label="@string/title_activity_splash_screen_result" >
        </activity>
        <activity
            android:name=".reusablelayout.ReusableLayoutActivity"
            android:label="@string/title_activity_reusable_layout"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".pulltorefresh.PullToRefreshActivity"
            android:label="@string/title_activity_pull_to_refresh"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".navigationdrawer.NavigationDrawerActivity" >
        </activity>
    </application>

</manifest>
